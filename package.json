{
  "name": "@vookav2/searchmusic",
  "version": "1.0.3",
  "private": false,
  "description": "Accurate search for musics, albums, artists, with related playlists and lyrics.",
  "keywords": [
    "search music",
    "album",
    "playlist"
  ],
  "license": "MIT",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "files": [
    "/build"
  ],
  "author": "mr687 <davinomoehdanino@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vookav2/searchmusic.git"
  },
  "bugs": {
    "url": "https://github.com/vookav2/searchmusic/issues"
  },
  "homepage": "https://github.com/vookav2/searchmusic#readme",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --no-notify --cls src/index.ts",
    "test": "NODE_ENV=test jest",
    "test:ci": "NODE_ENV=test jest --ci",
    "test:watch": "NODE_ENV=test jest --watch --verbose",
    "build": "rimraf build && tsc -p ./tsconfig.build.json",
    "lint": "eslint . --ext .ts",
    "pretty": "prettier --write .",
    "prepare": "husky install && yarn build"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.1.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^18.11.17",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.27.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-security": "^1.5.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sonarjs": "^0.13.0",
    "husky": "^8.0.1",
    "jest": "^27.4.1",
    "lint-staged": "^13.0.0",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.1",
    "ts-node-dev": "^2.0.0",
    "tsc-files": "^1.1.3",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "crypto-js": "^4.1.1",
    "got": "^11.8.2",
    "songlyrics": "^2.4.2"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "yarn eslint",
      "yarn prettier --write"
    ],
    "**/*.ts": [
      "tsc-files --noEmit"
    ]
  }
}
